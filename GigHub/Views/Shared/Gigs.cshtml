@using System.Activities.Statements
@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>@Model.Heading</h1>

@using (Html.BeginForm("Search", "Gigs"))
{
    <div class="form-group">
        <div id="searchGigs" class="input-group">
            @Html.TextBoxFor(m => m.SearchTerm, 
                new {@class = "form-control", @placeholder = "Search by artist, genre..."})
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
}

<ul class="gigs voffset4">
    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    <a href="@Url.Action("Details", "Gigs", new {id = gig.Id})">
                        @gig.Artist.Name
                    </a>
                    
                    @if (gig.IsCanceled)
                    {
                        <span class="label label-warning">Canceled</span>
                    }

                    @if (Model.ShowActions)
                    {
                        <button data-followed-id="@gig.Artist.Id" class="btn btn-custom-gig btn-sm pull-right js-toggle-follows ">Follow</button>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                    @if (Model.ShowActions && !gig.IsCanceled)
                    {
                        <button data-gig-id="@gig.Id" class="btn btn-custom-gig btn-default btn-sm pull-right js-toggle-attendance">Going ?</button>
                    }
                </span>
                </div>
        </li>
        }
</ul>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('.js-toggle-attendance').click(function (e) {
                var goingButton = $(e.target);

                $.post("/api/attendances", {gigId: goingButton.attr("data-gig-id")})
                .done(function() {
                    goingButton
                        .removeClass("btn-default")
                        .addClass("btn-info")
                        .text("Going");
                })
                .fail(function() {
                    alert("Something failed!");
                });
            });

            $('.js-toggle-follows').click(function(e) {
                var followButton = $(e.target);

                $.post("/api/follows", { followedId: followButton.attr("data-followed-id") })
                .done(function() {
                    followButton
                        .removeClass("btn-default")
                        .addClass("btn-info")
                        .text("Followed");
                })
                .fail(function() {
                    alert("Cannot follow");
                });
            });
        });
    </script>
}